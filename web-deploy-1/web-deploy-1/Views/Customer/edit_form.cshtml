@model web_deploy_1.ViewModels.Cust_by_MemberShip
@{
    ViewBag.Title = "edit_form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>edit_form</h2>

@using (Html.BeginForm("update_cust", "Customer"))
{



    <div class="form-group">
        
        @Html.HiddenFor(m => m.Customer.Id)

    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })

    </div>

    <div class="checkbox">
        
        @Html.CheckBoxFor(m => m.Customer.IsSubscribeToNewsLetter) Subscribe

    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MemberShipType.Name)
        @Html.DropDownListFor(m => m.Customer.MemberShipTypeId, new SelectList(@Model.MemberShipTypes,"Id","Name"),"ChangeType", new { @class = "form-control" })

    </div>


    <button type="submit">Save Edit</button>




}

