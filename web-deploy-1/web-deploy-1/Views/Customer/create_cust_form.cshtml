@model web_deploy_1.ViewModels.Cust_by_MemberShip
@{
    ViewBag.Title = "create_cust_form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>create_cust_form</h2>

<br />
<br />
@using (Html.BeginForm("create_cust", "Customer"))
{

    <div class="form-group">

        @Html.LabelFor(m=>m.Customer.Name)
        @Html.TextBoxFor(m=>m.Customer.Name,new {@class="form-control" })
        @Html.ValidationMessageFor(m=>m.Customer.Name)

        
    </div>



    <div class="form-group">

        @Html.LabelFor(m => m.Customer.Id)
        @Html.TextBoxFor(m => m.Customer.Id, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Birthdate)


    </div>



    <div class="form-group">

        @Html.LabelFor(m => m.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Birthdate)


    </div>




    <div class="form-group">

        @Html.LabelFor(m => m.Customer.Email)
        @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Email)


    </div>


    <div class="checkbox">
      
        @Html.CheckBoxFor(m=>m.Customer.IsSubscribeToNewsLetter) Subscribe for NL
        @Html.ValidationMessageFor(m=>m.Customer.IsSubscribeToNewsLetter)
        
    </div>






    <div class="form-group">
        @Html.LabelFor(m=>m.Customer.MemberShipTypeId)
        @Html.DropDownListFor(m=>m.Customer.MemberShipTypeId, new SelectList(Model.MemberShipTypes,"Id","Name"),"Select Somthing...",new {@class="form-control"})
        <!--//Html.ValidationMessageFor(m=>m.Customer.MemberShipTypeId)
    -->
            </div>


    <button type="submit" class="btn btn-primary"> Save</button>

}

